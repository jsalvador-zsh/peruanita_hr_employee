<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View para Salidas -->
    <record id="view_hr_employee_exit_tree" model="ir.ui.view">
        <field name="name">hr.employee.exit.tree</field>
        <field name="model">hr.employee.exit</field>
        <field name="arch" type="xml">
            <list string="Salidas de Empleados">
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="exit_reason"/>
                <field name="exit_time" widget="float_time"/>
                <field name="arrival_time" widget="float_time"/>
                <field name="entry_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- Form View para Salidas -->
    <record id="view_hr_employee_exit_form" model="ir.ui.view">
        <field name="name">hr.employee.exit.form</field>
        <field name="model">hr.employee.exit</field>
        <field name="arch" type="xml">
            <form string="Salida de Empleado">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" required="1"/>
                            <field name="job_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="date" required="1"/>
                        </group>
                        <group>
                            <field name="exit_time" widget="float_time"/>
                            <field name="arrival_time" widget="float_time"/>
                            <field name="entry_time" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="exit_reason" required="1"/>
                    </group>
                    <group>
                        <field name="observations"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View para Salidas -->
    <record id="view_hr_employee_exit_search" model="ir.ui.view">
        <field name="name">hr.employee.exit.search</field>
        <field name="model">hr.employee.exit</field>
        <field name="arch" type="xml">
            <search string="Buscar Salidas">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="exit_reason"/>
                <field name="date"/>
                <filter name="today" string="Hoy" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="this_week" string="Esta Semana" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="this_month" string="Este Mes" domain="[('date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_employee" string="Empleado" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_department" string="Departamento" context="{'group_by': 'department_id'}"/>
                    <filter name="group_date" string="Fecha" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action para Salidas -->
    <record id="action_hr_employee_exit" model="ir.actions.act_window">
        <field name="name">Salidas de Empleados</field>
        <field name="res_model">hr.employee.exit</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_employee_exit_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva salida de empleado
            </p>
            <p>
                Aqu√≠ puedes registrar las salidas de los empleados con todos los detalles necesarios.
            </p>
        </field>
    </record>
</odoo>